cat nginx-v.1.0.1.yml 
---

- hosts: web
  tasks:
    - name: Installs nginx web server
      apt: pkg=nginx state=installed update_cache=true
      notify:
        - start nginx

  handlers:
    - name: start nginx
      service: name=nginx state=started

  remote_user: deploy
  become: true
  become_method: sudo

